{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src", //откуда берутся файлы
    "outDir": "./dist", //куда они компилируются
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "@types"], //берет все файлы из src
  "exclude": ["node_modules", "dist"]
}